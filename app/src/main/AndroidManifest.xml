<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HotelsActivity"
            android:label="@string/category_hotels"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTask" />


        <activity android:name=".TouristAttractionsActivity"
            android:label="@string/category_tourist_attractions"
            android:parentActivityName=".MainActivity"
            />

        <activity android:name=".HistoricalMonumentActivity"
            android:label="@string/category_monuments"
            android:parentActivityName=".MainActivity"
            />

        <activity android:name=".RestaurantsActivity"
            android:label="@string/category_restaurants"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>